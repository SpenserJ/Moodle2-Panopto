<XMLDB PATH="blocks/panopto/db" VERSION="20140822" COMMENT="XMLDB file for Panopto Focus block"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
    <TABLES>
	    <TABLE NAME="block_panopto_foldermap" COMMENT="Map Moodle courses to Panopto folders">
			<FIELDS>
				<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" COMMENT="id of the table, please edit me" NEXT="moodleid"/>
				<FIELD NAME="moodleid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="ID of Moodle course." PREVIOUS="id" NEXT="panopto_id"/>
				<FIELD NAME="panopto_id" TYPE="char" LENGTH="36" NOTNULL="true" SEQUENCE="false" COMMENT="Public ID of Panopto folder." PREVIOUS="moodleid" NEXT="panopto_server"/>
				<FIELD NAME="panopto_server" TYPE="char" LENGTH = "64" NOTNULL="true" SEQUENCE = "false" COMMENT="Panopto server name for course." PREVIOUS="panopto_id" NEXT="panopto_app_key"/> 
				<FIELD NAME="panopto_app_key" TYPE="char" LENGTH = "64" NOTNULL="true" SEQUENCE = "false" COMMENT="Panopto application key for server." PREVIOUS="panopto_server"/> 				
			</FIELDS>
			<KEYS>
				<KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for test"/>
			</KEYS>
	    </TABLE>
    </TABLES>
</XMLDB>